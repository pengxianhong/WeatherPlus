<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl3"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="30dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/mImageView_realtime_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/a0" />

    <TextView
        android:id="@+id/mTextView_realtime_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/v"
        android:text="25℃"
        android:textColor="#fff"
        android:textSize="45sp" />

    <View
        android:id="@+id/v"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_below="@id/mImageView_realtime_img"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/mTextView_realtime_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/v"
        android:text="晴"
        android:textColor="#fff"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/mTextView_realtime_weather"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:id="@+id/mLayout_realtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/mTextView_realtime_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textColor="#efa8e4" />

            <TextView
                android:id="@+id/mTextView_realtime_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#efa8e4" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mTextView_realtime_templow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTextView_realtime_weather"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/v"
        android:text="20℃~"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mTextView_realtime_temphigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTextView_realtime_weather"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/mTextView_realtime_templow"
        android:text="30℃"
        android:textColor="#fff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mTextView_realtime_update"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentLocationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海淀区"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_location" />
    </LinearLayout>

    <TextView
        android:id="@+id/mTextView_realtime_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="更新"
        android:textColor="#DDD"
        android:textSize="14sp" />

</RelativeLayout>